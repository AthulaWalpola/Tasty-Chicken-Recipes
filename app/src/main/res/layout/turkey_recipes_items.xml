<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/colorCard"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp">

    <ImageView
        android:id="@+id/imageView_10"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="105dp">

        <TextView
            android:id="@+id/title_10"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/basic"
            android:textFontWeight="600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/time_10"
            android:layout_below="@id/title_10"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/serving_10"
            android:layout_below="@id/time_10"
            android:text="Serving"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ingredients_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/instructions_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>